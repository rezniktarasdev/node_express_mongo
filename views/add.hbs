<h1>Add new course</h1>
{{#if error}}
  <p class="alert">{{error}}</p>
{{/if}}

<form action="/add" method="POST" novalidate>
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required value="{{data.title}}">
    <label for="title">Course title</label>
    <span class="helper-text" data-error="Add titile"></span>
  </div>

  <div class="input-field">
    <input id="price" name="price" type="number" class="validate" required min="1" value="{{data.title}}" >
    <label for="price">Price</label>
    <span class="helper-text" data-error="Add price"></span>
  </div>

  <div class="input-field">
    <input id="img" name="img" type="text" class="validate" required value="{{data.img}}">
    <label for="img">URL img</label>
    <span class="helper-text" data-error="Add image URL"></span>
  </div>

  <input type="hidden" name="_csrf" value="{{csrfToken}}">

  <button class="btn btn-primary">Add course</button>
</form>